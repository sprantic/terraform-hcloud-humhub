; PHP configuration for HumHub
; Generated by Terraform/Ansible

; Memory and execution limits
memory_limit = 256M
max_execution_time = 300
max_input_time = 300

; File upload settings
upload_max_filesize = 100M
post_max_size = 100M
max_file_uploads = 20

; Session settings
session.save_handler = redis
session.save_path = "tcp://{{ redis_host }}:6379?database=1"
session.gc_maxlifetime = 3600

; Error reporting
display_errors = Off
log_errors = On
error_log = /var/log/php{{ php_version }}-fpm-humhub.log

; Date settings
date.timezone = UTC

; Security
expose_php = Off
allow_url_fopen = On
allow_url_include = Off

; OPcache settings
opcache.enable = 1
opcache.memory_consumption = 128
opcache.interned_strings_buffer = 8
opcache.max_accelerated_files = 4000
opcache.revalidate_freq = 2
opcache.fast_shutdown = 1

; Additional extensions
extension=gd
extension=curl
extension=zip
extension=xml
extension=mbstring
extension=intl
extension=ldap
extension=imagick
extension=redis
extension=mysqli